#! /usr/bin/env bash

lb config noauto \
    -b iso-hybrid \
    --debian-installer live \
    --system live \
    --apt-http-proxy http://192.168.1.3:3142 \
    --backports true \
    --image-name awesome \
    -d stretch \
    --parent-distribution stretch \
    --debootstrap-options "--variant=minbase --include=busybox-syslogd" \
    --initsystem sysvinit \
    --parent-mirror-bootstrap http://ftp.us.debian.org/debian/ \
    "$@"
